<table>
  <tr>
    <th> Code </th>
    <th> Format </th>
    <th> Device </th>
    <th> Location </th>
  </tr>


  <% @barcodes.each do |barcode| %>
  <tr>
      <td> <%= barcode.code %> </td>
      <td> <%= barcode.format %> </td>
      <td> <%= barcode.device %> </td>
      <td> <%= barcode.location %> </td>
  </tr>
  <% end %>
</table>

